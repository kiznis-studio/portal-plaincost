---
export const prerender = false;
import Base from '../../layouts/Base.astro';
import { getHighestRentMsas, formatRpp } from '../../lib/db';

const db = Astro.locals.runtime.env.DB;
const metros = await getHighestRentMsas(db, 100);
---

<Base
  title="Cities with Highest Rents in America 2026 â€” Rent Index Rankings"
  description="Top 100 US metros with the highest rent price index. BEA RPP rent data compared to national average."
  breadcrumbs={[{ name: 'Home', href: '/' }, { name: 'Rankings', href: '/rankings' }, { name: 'Highest Rents' }]}
>
  <section class="max-w-6xl mx-auto px-4 py-8">
    <div class="mb-2 text-sm text-[var(--color-text-secondary)]">
      <a href="/" class="hover:text-[var(--color-primary)]">Home</a> /
      <a href="/rankings" class="hover:text-[var(--color-primary)]">Rankings</a> /
    </div>
    <h1 class="text-2xl md:text-3xl font-bold mb-2">Cities with the Highest Rents in America</h1>
    <p class="text-[var(--color-text-secondary)] mb-6">Top {metros.length} metro areas ranked by rent price index (BEA Regional Price Parities)</p>

    <!-- Cross-links to other rankings -->
    <div class="flex flex-wrap gap-2 mb-6">
      <a href="/rankings/most-expensive" class="px-4 py-2 rounded-lg text-sm font-medium bg-[var(--color-surface)] border border-[var(--color-border)] text-[var(--color-text)] hover:border-[var(--color-primary)] transition-colors">Most Expensive</a>
      <a href="/rankings/cheapest" class="px-4 py-2 rounded-lg text-sm font-medium bg-[var(--color-surface)] border border-[var(--color-border)] text-[var(--color-text)] hover:border-[var(--color-primary)] transition-colors">Cheapest</a>
      <span class="px-4 py-2 rounded-lg text-sm font-medium bg-[var(--color-primary)] text-white">Highest Rents</span>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]">
            <th class="pb-2 font-medium w-8">#</th>
            <th class="pb-2 font-medium">Metro</th>
            <th class="pb-2 font-medium text-right">Rents</th>
            <th class="pb-2 font-medium text-right hidden sm:table-cell">Overall</th>
            <th class="pb-2 font-medium text-right hidden sm:table-cell">Goods</th>
            <th class="pb-2 font-medium text-right hidden md:table-cell">Services</th>
          </tr>
        </thead>
        <tbody>
          {metros.map((msa, i) => (
            <tr class="border-b border-[var(--color-border)] hover:bg-[var(--color-surface)] transition-colors">
              <td class="py-3 text-[var(--color-text-secondary)]">{i + 1}</td>
              <td class="py-3">
                <a href={`/metro/${msa.slug}`} class="text-[var(--color-primary)] hover:underline font-medium">{msa.name}</a>
              </td>
              <td class="py-3 text-right font-medium">{formatRpp(msa.rpp_rents)}</td>
              <td class="py-3 text-right hidden sm:table-cell">{formatRpp(msa.rpp_all)}</td>
              <td class="py-3 text-right hidden sm:table-cell">{formatRpp(msa.rpp_goods)}</td>
              <td class="py-3 text-right hidden md:table-cell">{formatRpp(msa.rpp_services)}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <div class="mt-8 bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-6">
      <h2 class="text-lg font-semibold mb-3">About This Ranking</h2>
      <p class="text-sm text-[var(--color-text-secondary)] leading-relaxed">
        The rent component of the Regional Price Parity (RPP) measures relative rent levels across U.S. metro areas. A value of 100 equals the national average. Cities above 100 have higher rents; below 100, lower rents. This ranking shows the {metros.length} metros with the highest rent index, where housing costs are most elevated relative to the rest of the country.
      </p>
    </div>

    <p class="text-xs text-[var(--color-text-secondary)] mt-6">
      Source: Bureau of Economic Analysis, Regional Price Parities by Metropolitan Statistical Area. Index where national average = 100.
    </p>
  </section>
</Base>
