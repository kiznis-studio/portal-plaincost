---
import Base from '../layouts/Base.astro';
import { getAllStates, getNationalStats } from '../lib/db';

const db = Astro.locals.runtime.env.DB;
const stats = await getNationalStats(db);
const states = await getAllStates(db);

const datasetSchema = {
  "@context": "https://schema.org",
  "@type": "Dataset",
  "name": "U.S. Regional Price Parities and Cost of Living",
  "description": "Bureau of Economic Analysis Regional Price Parity data for 387 metro areas and 51 states, measuring relative costs of goods, services, and rents.",
  "url": "https://plaincost.com",
  "keywords": ["cost of living", "regional price parities", "BEA RPP", "price index", "US cost comparison"],
  "creator": {
    "@type": "Organization",
    "name": "PlainCost"
  },
  "spatialCoverage": "United States",
  "temporalCoverage": "2022/2023",
  "license": "https://creativecommons.org/publicdomain/zero/1.0/",
  "isAccessibleForFree": true,
  "distribution": {
    "@type": "DataDownload",
    "encodingFormat": "text/html",
    "contentUrl": "https://plaincost.com"
  }
};
---

<Base
  title="PlainCost â€” Cost of Living Comparison for Every US Metro"
  description="Free cost of living data for 384 metros and 51 states. Compare prices for goods, services, and rents using BEA Regional Price Parities."
>
  <section class="max-w-6xl mx-auto px-4 py-12 md:py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Cost of Living<br class="sm:hidden"/> Across America</h1>
      <p class="text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
        Compare the cost of living across 384 metros and 51 states. See how prices for goods, services, and housing differ from the national average.
      </p>
      <form action="/search" method="get" class="mt-8 max-w-md mx-auto">
        <div class="relative">
          <input
            type="text"
            name="q"
            placeholder="Search metros or states..."
            class="w-full h-12 pl-12 pr-4 text-base rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] text-[var(--color-text)] placeholder-[var(--color-text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent"
          />
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-[var(--color-text-secondary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </form>
    </div>

    {stats && (
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">{stats.msa_count}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">Metro Areas</div>
        </div>
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">{stats.state_count}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">States</div>
        </div>
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">{stats.max_rpp_all?.toFixed(1)}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">Most Expensive</div>
        </div>
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">{stats.min_rpp_all?.toFixed(1)}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">Least Expensive</div>
        </div>
      </div>
    )}

    <h2 class="text-2xl font-bold mb-6">Browse by State</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
      {states.map(state => (
        <a href={`/state/${state.slug}`} class="flex items-center justify-between px-4 py-3 bg-[var(--color-surface)] border border-[var(--color-border)] rounded-lg hover:border-[var(--color-primary)] transition-colors">
          <span class="font-medium text-sm">{state.name}</span>
          <span class="text-xs text-[var(--color-text-secondary)]">{state.rpp_all?.toFixed(1)}</span>
        </a>
      ))}
    </div>
  </section>

  <script type="application/ld+json" set:html={JSON.stringify(datasetSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'PlainCost',
    url: 'https://plaincost.com/',
    potentialAction: {
      '@type': 'SearchAction',
      target: { '@type': 'EntryPoint', urlTemplate: 'https://plaincost.com/search?q={search_term_string}' },
      'query-input': 'required name=search_term_string',
    },
  })} />
</Base>
