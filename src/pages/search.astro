---
import Base from '../layouts/Base.astro';
import { searchMsas, formatRpp, rppDiff } from '../lib/db';

const query = Astro.url.searchParams.get('q') || '';
const db = Astro.locals.runtime.env.DB;
const results = query.trim() ? await searchMsas(db, query, 50) : [];
---

<Base
  title={query ? `Search: ${query}` : 'Search Cost of Living'}
  description={query ? `Search results for "${query}" â€” ${results.length} metro areas found.` : 'Search cost of living data by metro area name or CBSA code.'}
>
  <section class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-4">Search Cost of Living</h1>

    <form action="/search" method="get" class="mb-6">
      <div class="relative">
        <input
          type="text"
          name="q"
          value={query}
          placeholder="Search metros by name or CBSA..."
          class="w-full h-12 pl-12 pr-4 text-base rounded-xl border border-[var(--color-border)] bg-[var(--color-bg)] text-[var(--color-text)] placeholder-[var(--color-text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent"
          autofocus
        />
        <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-[var(--color-text-secondary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
    </form>

    {query && (
      <p class="text-sm text-[var(--color-text-secondary)] mb-4">
        {results.length} result{results.length !== 1 ? 's' : ''} for "{query}"
      </p>
    )}

    {results.length > 0 && (
      <div class="space-y-3">
        {results.map(msa => (
          <a
            href={`/metro/${msa.slug}`}
            class="block p-4 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-primary)] bg-[var(--color-bg)] transition-colors"
          >
            <div class="font-medium text-[var(--color-primary)]">{msa.name}</div>
            <div class="mt-1 text-sm text-[var(--color-text-secondary)] flex flex-wrap gap-x-4 gap-y-1">
              <span>RPP: {formatRpp(msa.rpp_all)}</span>
              <span>{rppDiff(msa.rpp_all)}</span>
              <span>Rents: {formatRpp(msa.rpp_rents)}</span>
              <span>CBSA: {msa.cbsa}</span>
            </div>
          </a>
        ))}
      </div>
    )}

    {query && results.length === 0 && (
      <div class="text-center py-12">
        <p class="text-[var(--color-text-secondary)]">No metro areas found for "{query}".</p>
        <p class="text-sm text-[var(--color-text-secondary)] mt-2">Try searching by city name or CBSA code.</p>
      </div>
    )}
  </section>
</Base>
